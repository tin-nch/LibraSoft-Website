
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FELayout.cshtml";
}

@model LibraSoftSolution.ViewModels.Event.RegistersVM

<style>
    .center {
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
</style>

<!-- blog-area start -->
<div class="blog-area black-bg pt-115 pb-20">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-20">
                <article class="postbox post format-image mb-40 submitormin">
                    <div class="postbox__thumb">
                        <img src="~/img/bg/SubmitFinal.jpg" alt="eventimage" class="center">
                    </div>
                </article>
            </div>
            <div class="col-lg-12">
                <article class="postbox post format-image mb-40 submitormin">
                    <div class="section-title white-text mb-15">
                        <h3 style="color:#09b81b">Submit Your Email Here: </h3>
                    </div>
                    <div class="postbox__text p-15">
                        <div id="SubmitEmailPar">
                            <partial name="_SubmitForm" model="Model"/> 
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>
<!-- blog-area end -->

<!-- Modal -->
<div class="modal fade" id="submitModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="submitModalLabel">Hello Mr/Ms,</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="getCode">
        <div class="post-comments-form">
            <div class="widget-title-box">
                <span class="animate-border"></span>
                <h3 class="widget-title"></h3>
            </div>
            <div class="about-me text-center">
                <h5>Thank you for attending our Webinar</h5>    
                <p>Kindly note that the entry time is: </p>
                <p>July 14, 2022 at 9:30 AM.</p>
                <p>Link: <a href="https://scandit.zoom.us/j/93751537018?pwd=ZWszYzh5S0FXeDBkS3R5aU1kenZWQT09" target="_blank">click here to join</a></p>
                <p></p>
            </div>
            <h6>We hope to see you soon.</h6>
            <hr style="margin:10px 0"/>
            <h5>Best Regard, </h5>
            <p>LibraSoft</p>
        </div>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-red" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


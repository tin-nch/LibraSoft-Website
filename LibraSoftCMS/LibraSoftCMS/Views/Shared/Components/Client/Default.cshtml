@using LibraSoftCMS.ViewModel

@model ClientDataModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<section class="brand-area pt-30 pb-30">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 offset-xl-3">
                <div class="section-title text-center mb-15">
                    <h1>@localizer["Happy Clients"]</h1>
                </div>
            </div>
        </div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">         
                <div class="carousel-item active">
                    <div class="single-brand partner-item">
                        @foreach(var cli1 in Model.Client1)
                        {
                            <a href="@cli1.url" target="_blank" style="width:60px;margin-right:30px;margin-left:30px">
                                @Html.Raw(@cli1.imgpath)
                            </a>                            
                        }
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="single-brand partner-item">
                        @foreach(var cli2 in Model.Client2)
                        {
                            <a href="@cli2.url" target="_blank" style="width:60px;margin-right:30px;margin-left:30px">
                                @Html.Raw(@cli2.imgpath)
                            </a>                            
                        }
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="prevnext-icon-blue" aria-hidden="true"><</span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="prevnext-icon-blue" aria-hidden="true">></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>
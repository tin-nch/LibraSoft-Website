@model List<LibraSoftSolution.ViewModels.ContentBlock.ServiceCTVM>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<section id="service" class="services-area pt-20 pb-35 black-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8  offset-md-2 offset-lg-3">
                <div class="section-title white-text text-center mb-15">
                    <h1>@localizer["Our Services"]</h1>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var Item in Model)
            {
               <div class="col-lg-3">
                    <div class="services-wrapper mb-30">
                        <div class="servces-icon">
                            @Html.Raw(@Item.ImgPath)
                        </div>
                        <div class="services-text">
                            <h2>@localizer[@Item.Title]</h2>
                        </div>
                    </div>
                </div>              
            }
        </div>
    </div>
</section>
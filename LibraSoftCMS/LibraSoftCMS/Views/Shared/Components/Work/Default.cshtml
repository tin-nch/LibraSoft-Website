@model List<LibraSoftSolution.ViewModels.ContentBlock.WorkCTVM>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<section id="work" class="work-process-area grey-bg pt-20 pb-20" data-background="img/bg/line.png">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 offset-xl-3">
                <div class="section-title text-center mb-15">
                    <h1>@localizer["Why Choose Us?"]</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="single__process text-center mb-30">
                    <div class="single__process-icon mb-40">
                        <span class="pe-7s-cash"></span>
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="single__process-content">
                        <div class="number">1</div>
                        <h4>@localizer["Reduce Business"]</h4>
                        <h4>@localizer["Operating Costs"]</h4>
                    </div>
                </div>
            </div> 
            <div class="col-lg-4 col-md-6">
                <div class="single__process text-center mb-30">
                    <div class="single__process-icon mb-40">
                        <span class="pe-7s-like2"></span>
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="single__process-content">
                        <div class="number">2</div>
                        <h4>@localizer["Increase"]</h4>
                        <h4>@localizer["Cusomer Sastisfaction"]</h4>
                    </div>
                </div>
            </div> 
            <div class="col-lg-4 col-md-6">
                <div class="single__process text-center mb-30">
                    <div class="single__process-icon mb-40">
                        <span class="pe-7s-clock"></span>
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="single__process-content">
                        <div class="number">3</div>
                        <h4>@localizer["Reduce"]</h4>
                        <h4>@localizer["Processing Time"]</h4>
                    </div>
                </div>
            </div> 
